<!-- EmployeeDetails.fragment.xml -->
<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">

    <IconTabBar expanded="{employee>/Employees}" class="sapUiSmallMarginBottom sapUiResponsiveContentPadding">
        <items>
            <IconTabFilter key="empStatus" text="Employee Section">
                <f:SimpleForm layout="ResponsiveGridLayout">
                    <f:title>
                        <core:Title text="Employee Details" />
                    </f:title>
                    <Label text="Employee name" />
                    <Text text="{employee>name}" />
                    <Label text="Mobile number" />
                    <Text text="{employee>mobileNumber}" />
                    <Label text="Email ID" />
                    <Text text="{employee>email}" />
                    <Label text="Address" />
                    <Text text="{employee>address},{employee>city}" />
                    <Label text="State/Pincode" />
                    <Text text="{employee>state},{employee>pincode}" />
                    <Label text="Position" />
                    <Text text="{employee>position}" />
                    <Label text="Department" />
                    <Text text="{employee>department}" />
                    <Label text="Salary Details" />
                    <Text text="{employee>salaryDetails}" />
                    <Label text="Laptop Required" />
                    <Text text="{employee>laptop}" />
                    <Label text="Mouse Required" />
                    <Text text="{employee>mouse}" />
                </f:SimpleForm>
            </IconTabFilter>
            <IconTabFilter key="attachments" text="Attachments">
                <List headerText="A List jvjhvvkvhjvhv" showSeparators="Inner">
                
                <Text text="hjfhjcj"></Text>
                </List>
            </IconTabFilter>
            <IconTabFilter key="notes" text="Notes">
                <FeedInput />
            </IconTabFilter>
        </items>
    </IconTabBar>

</core:FragmentDefinition>
