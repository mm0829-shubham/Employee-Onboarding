                selectedItem="{employeeModel>/EditEmployee/hrStatus}"
                change="onHrStatusChange"
            >
                <core:Item
                    key="hrStatusPosition3"
                    text="Pending"
                />
                <core:Item
                    key="hrStatusPosition2"
