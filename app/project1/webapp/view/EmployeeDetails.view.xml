                    </m:IconTabFilter>
                    <m:IconTabFilter
                        key="comments"
                        text="Comments"
                    >
                        <m:FeedInput
                            post="onPost"
                            icon="sap-icon://customer"
                            class="sapUiSmallMarginTopBottom"
                        />
                        <m:List
                            showSeparators="Inner"
                            items="{feedModel>/EntryCollection}"
                        >
                            <m:FeedListItem
                                sender="{Author}"
                                icon="{AuthorPicUrl}"
                                senderPress="onSenderPress"
                                iconPress="onIconPress"
                                info="{Type}"
                                timestamp="{Date}"
                                text="{Text}"
                                convertLinksToAnchorTags="All"
                            />
                        </m:List>
                    </m:IconTabFilter>
                </m:items>
            </m:IconTabBar>

